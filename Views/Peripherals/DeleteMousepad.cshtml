@using InventoryTracker.Models.DomainPeripherals
@model Mousepad

<form method="post" asp-controller="Peripherals" asp-action="DeleteMousepadPOST" asp-route-id="@Model.MousepadId">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Видалити</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="MousepadId" />
		<div class="mb-3">
			<label asp-for="Manufacturer"></label>
			<input asp-for="Manufacturer" disabled />
			<span asp-validation-for="Manufacturer" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Model"></label>
			<input asp-for="Model" disabled />
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Size" disabled />
			<label asp-for="Size"></label>
			<span asp-validation-for="Size" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Dimensions" disabled />
			<label asp-for="Dimensions"></label>
			<span asp-validation-for="Dimensions" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Color" disabled />
			<label asp-for="Color"></label>
			<span asp-validation-for="Color" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Material" disabled />
			<label asp-for="Material"></label>
			<span asp-validation-for="Material" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Price" disabled />
			<label asp-for="Price"></label>
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="AmountInStock"></label>
			<input asp-for="AmountInStock" disabled />
			<span asp-validation-for="AmountInStock" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Видалити</button>
		<a asp-controller="Peripherals" asp-action="PeripheralsIndex" class="btn btn-secondary" style="width:150px">
			Назад до каталогу
		</a>
	</div>

</form>