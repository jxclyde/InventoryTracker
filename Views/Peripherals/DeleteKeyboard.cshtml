@using InventoryTracker.Models.DomainPeripherals
@model Keyboard	

<form method="post" asp-controller="Peripherals" asp-action="DeleteKeyboardPOST" asp-route-id="@Model.KeyboardId">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Видалити</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="KeyboardId" />
		<div class="mb-3">
			<label asp-for="Manufacturer"></label>
			<input asp-for="Manufacturer" disabled />
			<span asp-validation-for="Manufacturer" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Model"></label>
			<input asp-for="Model" disabled />
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="FormFactor" disabled />
			<label asp-for="FormFactor"></label>
			<span asp-validation-for="FormFactor" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="KeycapType" disabled />
			<label asp-for="KeycapType"></label>
			<span asp-validation-for="KeycapType" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="KeycapMaterial" disabled />
			<label asp-for="KeycapMaterial"></label>
			<span asp-validation-for="KeycapMaterial" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Color" disabled />
			<label asp-for="Color"></label>
			<span asp-validation-for="Color" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Type" disabled />
			<label asp-for="Type"></label>
			<span asp-validation-for="Type" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Layout"></label>
			<input asp-for="Layout" disabled />
			<span asp-validation-for="Layout" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ConnectionType"></label>
			<input asp-for="ConnectionType" disabled />
			<span asp-validation-for="ConnectionType" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Price" disabled />
			<label asp-for="Price"></label>
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="AmountInStock"></label>
			<input asp-for="AmountInStock" disabled />
			<span asp-validation-for="AmountInStock" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Видалити</button>
		<a asp-controller="Peripherals" asp-action="PeripheralsIndex" class="btn btn-secondary" style="width:150px">
			Назад до каталогу
		</a>
	</div>

</form>