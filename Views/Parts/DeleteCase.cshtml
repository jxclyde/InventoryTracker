@using InventoryTracker.Models.DomainComponents
@model Case

<form method="post" asp-controller="Parts" asp-action="DeleteCasePost" asp-route-id="@Model.CaseId">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Видалити</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="CaseId" />
		<div class="mb-3">
			<label asp-for="Manufacturer"></label>
			<input asp-for="Manufacturer" disabled />
			<span asp-validation-for="Manufacturer" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Model"></label>
			<input asp-for="Model" disabled />
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Type" disabled />
			<label asp-for="Type"></label>
			<span asp-validation-for="Type" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Color"></label>
			<input asp-for="Color" disabled />
			<span asp-validation-for="Color" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="MotherboardFormFactor"></label>
			<input asp-for="MotherboardFormFactor" disabled />
			<span asp-validation-for="MotherboardFormFactor" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Price" disabled />
			<label asp-for="Price"></label>
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="AmountInStock"></label>
			<input asp-for="AmountInStock" disabled />
			<span asp-validation-for="AmountInStock" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Видалити</button>
		<a asp-controller="Parts" asp-action="PartsIndex" class="btn btn-secondary" style="width:150px">
			Назад до каталогу
		</a>
	</div>

</form>