@using InventoryTracker.Models.DomainComponents
@model RAM

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Item</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Manufacturer"></label>
			<input asp-for="Manufacturer" />
			<span asp-validation-for="Manufacturer" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="MemoryType"></label>
			<input asp-for="MemoryType" />
			<span asp-validation-for="MemoryType" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="MemorySize" />
			<label asp-for="MemorySize"></label>
			<span asp-validation-for="MemorySize" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ModulesAmount"></label>
			<input asp-for="ModulesAmount" />
			<span asp-validation-for="ModulesAmount" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Frequency"></label>
			<input asp-for="Frequency" />
			<span asp-validation-for="Frequency" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Price" />
			<label asp-for="Price"></label>
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="AmountInStock"></label>
			<input asp-for="AmountInStock" />
			<span asp-validation-for="AmountInStock" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Parts" asp-action="PartsIndex" class="btn btn-secondary" style="width:150px">
			Back to Catalogue
		</a>
	</div>

</form>
