@using InventoryTracker.Models.DomainComponents
@model Drive

<form method="post" asp-controller="Parts" asp-action="DeleteDrivePost" asp-route-id="@Model.DriveId">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Item</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="DriveId" />
		<div class="mb-3">
			<label asp-for="Manufacturer"></label>
			<input asp-for="Manufacturer" disabled />
			<span asp-validation-for="Manufacturer" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Model"></label>
			<input asp-for="Model" disabled />
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Type" disabled />
			<label asp-for="Type"></label>
			<span asp-validation-for="Type" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Capacity"></label>
			<input asp-for="Capacity" disabled />
			<span asp-validation-for="Capacity" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ConnectionInterface"></label>
			<input asp-for="ConnectionInterface" disabled />
			<span asp-validation-for="ConnectionInterface" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ReadSpeed"></label>
			<input asp-for="ReadSpeed" disabled />
			<span asp-validation-for="ReadSpeed" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="WriteSpeed"></label>
			<input asp-for="WriteSpeed" disabled />
			<span asp-validation-for="WriteSpeed" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Price" disabled />
			<label asp-for="Price"></label>
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="AmountInStock"></label>
			<input asp-for="AmountInStock" disabled />
			<span asp-validation-for="AmountInStock" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
		<a asp-controller="Parts" asp-action="PartsIndex" class="btn btn-secondary" style="width:150px">
			Back to Catalogue
		</a>
	</div>

</form>