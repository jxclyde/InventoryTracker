@using InventoryTracker.Models.DomainComponents
@model Processor

<form method="post" asp-controller="Parts" asp-action="DeleteProcessorPOST" asp-route-id="@Model.ProcessorId">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Видалити</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<input type="hidden" asp-for="ProcessorId" />
		<div class="mb-3">
			<label asp-for="Manufacturer"></label>
			<input asp-for="Manufacturer" disabled/>
			<span asp-validation-for="Manufacturer" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Model"></label>
			<input asp-for="Model" disabled />
			<span asp-validation-for="Model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="CoreCount" disabled />
			<label asp-for="CoreCount"></label>
			<span asp-validation-for="CoreCount" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ThreadCount"></label>
			<input asp-for="ThreadCount" disabled />
			<span asp-validation-for="ThreadCount" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input asp-for="Price" disabled />
			<label asp-for="Price"></label>
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="AmountInStock"></label>
			<input asp-for="AmountInStock" disabled />
			<span asp-validation-for="AmountInStock" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Видалити</button>
		<a asp-controller="Parts" asp-action="PartsIndex" class="btn btn-secondary" style="width:150px">
			Назад до каталогу
		</a>
	</div>

</form>